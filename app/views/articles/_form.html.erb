<div class="form">
      <%= form_for(article) do |form| %>
      <div class="form-title">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>
      <div class="form-content">
        <%= form.label :content %>
        <%= form.text_field :content %>
      </div>
      <div class="form-submit">
        <%= form.submit %>
      </div>
      <% end %>
  </div>
